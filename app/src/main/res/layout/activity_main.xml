<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/main_button_rx_with_dialog_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rx_with_dialog_fragment"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/main_button_coroutines_with_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coroutines_with_dialog"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/main_button_coroutines_with_dialog_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coroutines_with_dialog_fragment"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/main_button_view_model_with_dialog_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_model_with_dialog_fragment"
            android:textAllCaps="false"/>

    </LinearLayout>
</layout>